{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./",
        "moduleResolution": "node",
        "allowJs": true
    },
    "include": [
        "app.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}